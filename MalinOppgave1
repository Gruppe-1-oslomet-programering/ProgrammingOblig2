package oblig2;


import static javax.swing.JOptionPane.*;

public class Oblig2 {
    public static void main (String [] args){

        int nedre = 0;
        int øvre = -1;
        boolean kontroll = true;
        String innNedre;
        String innØvre;


        while (kontroll) {
            innNedre = showInputDialog("Skriv inn nedre grense");
            innØvre = showInputDialog("Skriv inn øvre grense");
            try {
                nedre = Integer.parseInt(innNedre);
                øvre = Integer.parseInt(innØvre);
                kontroll = false;
            } catch (Exception e) {
                System.out.println(e);
                showMessageDialog(null, "Feil i input, forsøk igjen");
                nedre = 0;
                øvre = 0;
                kontroll = true;
            }
        }


        while (øvre <= nedre){
            showMessageDialog(null, "Øvre grense er mindre eller lik nedre grense.");
            innNedre = showInputDialog("Skriv inn nedre grense");
            innØvre = showInputDialog("Skriv inn øvre grense");
            try{
                nedre = Integer.parseInt(innNedre);
                øvre = Integer.parseInt(innØvre);
            }
            catch (Exception e){
                System.out.println(e);
                showMessageDialog(null,"Feil i input, forsøk igjen");
                nedre = 0;
            }

        }
            int sum = 0;
        for (int i = nedre; i <= øvre; i++){

            sum+= i;

            if (i%10!=0 && i !=øvre) {
                System.out.print(i + " + ");
            }
            else if (i%10==0 && i !=øvre) {
                System.out.print(i+"\n+ ");
            }

            if (i == øvre){
                System.out.print(i+"\n= "+sum);
            }



            }
        }



    }
